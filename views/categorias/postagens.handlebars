<h2>Postagens da categoria <strong>{{categoria.nome}}</strong></h2>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>Título: {{titulo}}</h3>
        <p>Descrição: {{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia Mais</button></a>
        <hr>
      <small>Data de publicação: {{data}}</small>
    </div>
</div>
{{else}}
    <h5>Nehuma Postagem</h5>
{{/each}}